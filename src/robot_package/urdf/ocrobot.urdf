<?xml version="1.0" ?>

<robot name="ocrobot">
<!-- Link Definition -->
    <link name="base_footprint"/>

    <!-- Robot base link -->
    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.18 0.09 0.035"/> <!-- 로봇의 기본 몸체 크기 -->
            </geometry>
            <material name="grey">
                <color rgba="0.5 0.5 0.5 1.0"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="0.18 0.09 0.035"/> <!-- 로봇의 기본 몸체 크기 -->
            </geometry>
        </collision>
    </link>

    <!-- Left wheel link -->
    <link name="left_front_wheel">
        <visual>
            <geometry>
                <cylinder length="0.042" radius="0.04"/> <!-- 바퀴의 크기 -->
            </geometry>
            <material name="black">
                <color rgba="0.0 0.0 0.0 1.0"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.042" radius="0.04"/> <!-- 바퀴의 크기 -->
            </geometry>
        </collision>
    </link>
    <link name="left_rear_wheel">
        <visual>
            <geometry>
                <cylinder length="0.042" radius="0.04"/> <!-- 바퀴의 크기 -->
            </geometry>
            <material name="black">
                <color rgba="0.0 0.0 0.0 1.0"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.042" radius="0.04"/> <!-- 바퀴의 크기 -->
            </geometry>
        </collision>
    </link>

    <!-- Right wheel link -->
    <link name="right_front_wheel">
        <visual>
            <geometry>
                <cylinder length="0.042" radius="0.04"/> <!-- 바퀴의 크기 -->
            </geometry>
            <material name="black">
                <color rgba="0.0 0.0 0.0 1.0"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.042" radius="0.04"/> <!-- 바퀴의 크기 -->
            </geometry>
        </collision>
    </link>
    <link name="right_rear_wheel">
        <visual>
            <geometry>
                <cylinder length="0.042" radius="0.04"/> <!-- 바퀴의 크기 -->
            </geometry>
            <material name="black">
                <color rgba="0.0 0.0 0.0 1.0"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.042" radius="0.04"/> <!-- 바퀴의 크기 -->
            </geometry>
        </collision>
    </link>

<!-- Joint Definition -->
    <joint name="base_joint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link" />
        <origin xyz="0 0 0.06" rpy="0 0 0"/>
    </joint>

    <joint name="right_wheels_joint" type="fixed">
        <parent link="right_front_wheel"/>
        <child link="right_rear_wheel"/>
        <origin xyz="-0.12 0 0"/> <!-- 앞바퀴와 뒷바퀴 사이의 거리 -->
    </joint>
    <joint name="left_wheels_joint" type="fixed">
        <parent link="left_front_wheel"/>
        <child link="left_rear_wheel"/>
        <origin xyz="-0.12 0 0"/> <!-- 앞바퀴와 뒷바퀴 사이의 거리 -->
    </joint>

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_front_wheel"/>
        <origin xyz="0.06 0.045 -0.02" rpy="0 0 0"/>
        <axis xyz="0 1 0"/> <!-- 회전축 설정 -->
    </joint>
    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_front_wheel"/>
        <origin xyz="0.06 -0.045 -0.02" rpy="0 0 0"/>
        <axis xyz="0 1 0"/> <!-- 회전축 설정 -->
    </joint>

</robot>